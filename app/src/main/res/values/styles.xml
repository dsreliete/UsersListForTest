<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:listDivider">@color/dividerColor</item>
    </style>


    <style name="TextView" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:color">@color/primaryText</item>
    </style>

</resources>
