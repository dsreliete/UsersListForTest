<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:listDivider">@color/dividerColor</item>
    </style>


    <style name="TextView.Small" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:color">@color/primaryText</item>
    </style>

    <style name="TextView.NoPadding" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:color">@color/primaryText</item>
    </style>

    <style name="TextView.Medium" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:paddingLeft">@dimen/text_margin</item>
        <item name="android:color">@color/primaryText</item>
        <item name="android:layout_marginTop">@dimen/text_margin</item>
    </style>

    <style name="TextView.Small.Margin" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:paddingLeft">@dimen/text_margin</item>
        <item name="android:color">@color/secundaryText</item>
        <item name="android:layout_marginTop">@dimen/text_margin</item>
    </style>
</resources>
